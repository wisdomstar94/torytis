{
  "compilerOptions": {
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
